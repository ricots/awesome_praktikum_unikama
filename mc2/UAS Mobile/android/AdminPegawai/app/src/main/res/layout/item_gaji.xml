<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    app:mrl_rippleBackground="#fff"
    app:mrl_rippleDelayClick="true"
    app:mrl_rippleDuration="700"
    app:mrl_rippleOverlay="true"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/itemGaji_Profil"
                android:layout_width="100dp"
                android:src="@mipmap/karyawan2"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/itemGaji_txtNama"
                    android:text="Nama"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#b1b1b1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <TextView
                    android:id="@+id/itemGaji_txtJabatan"
                    android:text="Jabatan"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#b1b1b1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <TextView
                    android:id="@+id/itemGaji_txtJenisKelamin"
                    android:text="Jenis Kelamin"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#b1b1b1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <TextView
                    android:id="@+id/itemGaji_txtAlamat"
                    android:text="Alamat"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#b1b1b1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <TextView
                    android:id="@+id/itemGaji_txtLembur"
                    android:text="Lembur"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#b1b1b1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <TextView
                    android:id="@+id/itemGaji_txtGaji"
                    android:text="Gaji"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#b1b1b1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

            </LinearLayout>
        </LinearLayout>

</android.support.v7.widget.CardView>
</com.balysv.materialripple.MaterialRippleLayout>
