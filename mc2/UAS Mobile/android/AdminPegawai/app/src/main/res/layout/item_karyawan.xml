<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    app:mrl_rippleBackground="#fff"
    app:mrl_rippleDelayClick="true"
    app:mrl_rippleDuration="400"
    app:mrl_rippleOverlay="true"
    android:layout_width="150dp"
    android:layout_height="250dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp">
                <ImageView
                    android:id="@+id/itemKaryawan_Profil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/karyawan2"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/itemKaryawan_txtNama"
                    android:text="Nama"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:padding="3dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@android:color/white"
                    android:background="#92000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <TextView
                android:id="@+id/itemKaryawan_txtID"
                android:text="Id"
                android:visibility="gone"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/itemKaryawan_txtJabatan"
                android:text="Jabatan"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/itemKaryawan_txtAlamat"
                android:text="Alamat"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/itemKaryawan_txtJenisKelamin"
                android:text="Jenis Kelamin"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/itemKaryawan_txtUsia"
                android:text="Usia"
                android:visibility="gone"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</com.balysv.materialripple.MaterialRippleLayout>