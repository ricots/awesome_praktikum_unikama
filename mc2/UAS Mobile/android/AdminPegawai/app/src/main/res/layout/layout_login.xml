<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fb0c9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.erif.adminpegawai.Login">

    <android.support.percent.PercentRelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtLogin"
            android:text="Account Login"
            android:textSize="35sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.percent.PercentRelativeLayout
            app:layout_widthPercent="100%"
            app:layout_heightPercent="50%"
            android:background="@android:color/white"
            android:padding="5dp"
            app:layout_marginTopPercent="20%"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layUsername"
                app:layout_marginTopPercent="18%"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edUsername"
                    android:hint="Username"
                    android:inputType="textAutoComplete"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layPassword"
                android:layout_below="@+id/layUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edPassword"
                    android:hint="Password"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                app:mrl_rippleBackground="#fff"
                app:mrl_rippleDelayClick="true"
                app:mrl_rippleDuration="1000"
                app:mrl_rippleOverlay="true"
                app:layout_widthPercent="40%"
                app:layout_heightPercent="20%">

                <Button
                    android:id="@+id/btbLogin"
                    android:text="Sign In"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:background="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.balysv.materialripple.MaterialRippleLayout>

        </android.support.percent.PercentRelativeLayout>

        <ImageView
            android:id="@+id/imgLogin"
            android:src="@mipmap/logi"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtLogin"
            app:layout_widthPercent="30%"
            app:layout_heightPercent="22%"/>

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>
